<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Show goal -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/health_plan_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="2dp"
        app:strokeColor="#ff6750a4"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:id="@+id/bmiTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="< Goal:  >"
                android:textSize="24sp"
                android:textColor="#ff6750a4"
                android:textStyle="bold"/>
            <GridLayout
                android:id="@+id/planDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="1"
                android:columnCount="2"
                android:padding="10dp">
                <TextView
                    android:id="@+id/startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/bmiTextView"
                    android:text="Start: "
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/rmrTextView"
                    android:text="End: "
                    android:textSize="18sp"/>
            </GridLayout>

            <Button
                android:id="@+id/change_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                android:text="Change"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/planDuration"
                app:layout_constraintVertical_bias="0.806" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Show Diet Plan -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/diet_plan_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="24dp"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/health_plan_card"
        app:strokeWidth="2dp"
        app:strokeColor="#ff6750a4"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:id="@+id/diet_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center"
                android:text="Diet Plan"
                android:textSize="24sp"
                android:textColor="#ff6750a4"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/day_calories_intake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginVertical="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/diet_label"
                android:gravity="center"
                android:text="Calories Intake: (cal)"
                android:textSize="16sp"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2">
                <TextView
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="@string/protein"
                    android:gravity="center"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="@string/carb"
                    android:gravity="center"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="@string/fat"
                    android:gravity="center"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/day_protein_intake"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="%"
                    android:gravity="center"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/day_carb_intake"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="%"
                    android:gravity="center"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/day_fat_intake"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="%"
                    android:gravity="center"
                    android:textSize="16sp"/>
            </GridLayout>
            <TextView
                android:id="@+id/limited_foods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="Limited foods: "
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/supported_nutrients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="Supported nutrients: "
                android:textSize="16sp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Show Exercise Plan -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/exercise_plan_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="24dp"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diet_plan_card"
        app:strokeWidth="2dp"
        app:strokeColor="#ff6750a4"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:id="@+id/exercise_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center"
                android:text="Exercise Plan"
                android:textSize="24sp"
                android:textColor="#ff6750a4"
                android:textStyle="bold"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:columnCount="2"
                android:rowCount="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sleep_label"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/exercise_level_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Exercise level:"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/exercise_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#ff6750a4"/>
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:columnCount="2"
                android:rowCount="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sleep_label"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/daily_duration_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Daily duration:"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/daily_exercise_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text=" hr"
                    android:textSize="16sp"/>
            </GridLayout>
            <TextView
                android:id="@+id/recommended_exercises"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="Suggested exercises: "
                android:textSize="16sp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Show Sleep Plan -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/sleep_plan_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="24dp"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exercise_plan_card"
        app:strokeWidth="2dp"
        app:strokeColor="#ff6750a4"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:id="@+id/sleep_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center"
                android:text="Sleep Plan"
                android:textSize="24sp"
                android:textColor="#ff6750a4"
                android:textStyle="bold"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:columnCount="2"
                android:rowCount="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sleep_label"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/sleep_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Duration: hrs"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/wake_up_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Wake up at: "
                    android:textSize="16sp"/>
            </GridLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>